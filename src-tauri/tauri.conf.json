{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "uoomibl",
  "version": "0.1.0",
  "identifier": "com.uoomibl.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "uoomibl",
        "width": 900,
        "height": 680,
        "minWidth": 700,
        "minHeight": 550,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "resizable": true,
        "fullscreen": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
